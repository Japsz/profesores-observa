<script type="text/javascript">
    // Cargar ultimos materiales subidos en #mainframe
    $(function(){
        $.ajax({
            type: 'get',
            url: "/material",
            success: function (html) {
                $("#mainframe").append(html);
            }
        });
    });
</script>
