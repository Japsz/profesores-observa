                <a class="navbar-brand" href="/" style="font-weight: 600"><i class="material-icons">&#xE871;</i> Observa Ciudadanía</a>
            </div>
            <div class="navbar-collapse collapse navbar-responsive-collapse">
                <ul class="nav navbar-nav">
                    <li><a href="/">Inicio</a></li>
                    <li><a href="#">La Plataforma</a></li>
                    <li><a href="#">ObservaCiudadanía</a></li>
                    <li><a href="#">Involúcrate</a></li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container blog-content">
        <div class="row">
            <div id="leftframe" class="col-md-5 col-md-offset-4 blog-sidebar">
                <div class="sidebar-module">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Inicie sesión</h3>
                        </div>
                        <div class="panel-body">
                            <form id="form_login_teacher">
                                <div class="form-group">
                                    <input class="form-control" placeholder="Usuario" id="username" type="text" required autofocus>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Contraseña" id="password" type="password" required value="">
                                </div>
                                <button type="submit" class="btn btn-lg btn-success btn-block">Iniciar Sesión <i class="fa fa-sign-in"></i></button>
                                <a style="margin-left: 20%" href="#">¿Deseas recuperar tu contraseña?</a><br>
                                <a style="margin-left: 14%" href="#">¿Eres nuevo? Solicita una inscripción aquí</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div><!-- /.container -->

<script type="text/javascript">
    $("#form_login_teacher").on('submit',function(e){
        e.preventDefault();
        $.ajax({
            type: 'POST',
            data: {username: $("#username").val(), password: $("#password").val() },
            url: '/teacher/login_teacher_confirm',
            success: function(data){
                if(data == "ok"){
                    window.location.href = "/teacher";
                } else{
                    alert("Datos de usuario incorrectos, intente nuevamente.");
                }
            }
        });
    });
</script>

