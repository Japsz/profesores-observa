<!-- Informacion necesaria para crear un recurso base. -->
<div id="modal_new_resource" class="modal  fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <button type="button" class="close" data-dismiss="modal" style="padding: 5px 5px">
                <span aria-hidden="true">&times;</span>
            </button>

            <div class="modal-header ">
                <div class="row">
                    <div class="col-md-6">
                        <h3 class="modal-title">Formulario agregar nuevo Recurso</h3>
                    </div>
                    <div class="col-md-6">
                        <div class="progress">
                            <div class="progress-bar" role="progressbar" style="width: 0%;"></div>
                        </div>
                    </div>
                </div>
            </div>

            <form id="resource_form" class="form-horizontal style-form">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-sm-12" style="padding-right: 3px">
                            <div class="form-group">
                                <label for="title">Titulo</label>
                                <input name="title" type="text" class="form-control"
                                       placeholder="¿Cual es el titulo del recurso?">
                            </div>
                        </div>
                        <div name="checkboxlist" class="row" style="padding-bottom: 5px">
                            <h3>Tipo de recurso</h3>
                            <div class="col-sm-4">
                                <label class="checkbox-inline">
                                    <input type="checkbox" id="inlineCheckbox1" value="text"> Columna/libros/textos
                                </label>
                            </div>
                            <div class="col-sm-3">
                                <label class="checkbox-inline">
                                    <input type="checkbox" id="inlineCheckbox1" value="image"> Imagen
                                </label>
                            </div>
                            <div class="col-sm-4">
                                <label class="checkbox-inline">
                                    <input type="checkbox" id="inlineCheckbox1" value="guide"> Guías/pruebas
                                </label>
                            </div>
                            <div class="col-sm-4">
                                <label class="checkbox-inline">
                                    <input type="checkbox" id="inlineCheckbox1" value="presentation"> Presentación
                                </label>
                            </div>
                            <div class="col-sm-3">
                                <label class="checkbox-inline">
                                    <input type="checkbox" id="inlineCheckbox1" value="video"> Video
                                </label>
                            </div>
                            <div class="col-sm-5">
                                <label class="checkbox-inline">
                                    <input type="checkbox" id="inlineCheckbox1" value="map"> Mapas conceptuales
                                </label>
                            </div>
                        </div>

                        <div class="form-group col-sm-12">
                            <label for="tags">Tags</label>
                            <select name="tags" class="form-control">
                                <option>Lenguaje</option>
                                <option>Matematicas</option>
                                <option>Ciencias Sociales</option>
                                <option>Ingles</option>
                                <option>Historia</option>
                            </select>
                        </div>
                        <div class="form-group col-sm-12">
                            <label for="description">Descripcion</label>
                            <textarea name="description" class="form-control" rows="3" maxlength="255"
                                      placeholder="Descripcion breve de tu Recurso. (Max. 255 caracteres)"></textarea>
                        </div>
                        <div class="col-sm-12">
                            <label for="description">Texto de Columna</label>
                            <textarea name="text" class="form-control" rows="5"
                                      placeholder="¡Aca puedes explayarte cuanto quieras sobre tu aporte!"></textarea>
                        </div>
                        <div class="col-sm-8 col-sm-offset-2">
                            <label>Portada</label>
                            <input name="frontimage" type="file" accept="image/*">
                        </div>
                        <div class="row col-sm-8 col-sm-offset-2">
                            <label>Subir Anexos 1</label>
                            <input name="file1" type="file">
                        </div>
                        <div class="row col-sm-8 col-sm-offset-2">
                            <label>Subir Anexos 2</label>
                            <input name="file2" type="file">
                        </div>
                        <div class="row col-sm-8 col-sm-offset-2">
                            <label>Subir Anexos 3</label>
                            <input name="file3" type="file">
                        </div>

                    </div>

                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary btn-raised">Continuar</button>
                    <button type="button" class="btn btn-secondary btn-raised" data-dismiss="modal">Cancelar</button>
                </div>
            </form>

            <!-- File charge
            <form id="testform" enctype="multipart/form-data">
                <input type="file" name="myfile"><br>
                <div class="progress">
                    <div id="mybar" class="progress-bar"></div >
                </div>
                <div id="status"></div>
                <input type="submit">
            </form>
            -->
        </div>
    </div>
</div>

<script>
    $('#resource_form').submit(function(e) {
        e.preventDefault();
        $(this).ajaxSubmit({
            url: '/resource/add',
            type: 'POST',
            complete: function (xhr) {
                $('#modal_new_resource').modal('hide');
                console.log(xhr);
            }
        });
        return false;
    });

