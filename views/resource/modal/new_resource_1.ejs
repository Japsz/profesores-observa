<!-- Informacion necesaria para crear un recurso base. -->
<div id="modal_new_resource" class="modal fade">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <button type="button" class="close" data-dismiss="modal" style="padding: 5px 5px">
                <span aria-hidden="true">&times;</span>
            </button>

            <div class="modal-header ">
                <div class="row">
                    <div class="col-md-6">
                        <h3 class="modal-title">Formulario agregar nuevo Recurso</h3>
                    </div>
                    <div class="col-md-6">
                        <div class="progress">
                            <div id="bar" class="progress-bar" role="progressbar" style="width: 0%;"></div>
                        </div>
                    </div>
                </div>
            </div>

            <form id="resource_form" class="form-horizontal style-form">
                <div class="modal-body">
                    <div class="row" style="border-bottom: 1px black">
                        <div class="col-sm-6">
                            <input hidden id="idresourcedad" name="idresourcedad" type="text" value="">
                            <div class="col-sm-12" style="padding-right: 3px">
                                <div class="form-group">
                                    <label for="title">Titulo</label>
                                    <input name="title" type="text" class="form-control"
                                           placeholder="¿Cual es el titulo del recurso?">
                                </div>
                            </div>
                            <div class="form-group col-sm-12">
                                <label for="tags">Area</label>
                                <select name="tags" class="form-control">
                                    <option>Lenguaje</option>
                                    <option>Matemática</option>
                                    <option>Ciencias Sociales</option>
                                    <option>Ingles</option>
                                    <option>Historia</option>
                                </select>
                            </div>
                            <div id="checkboxlist" class="col-sm-12" style="padding-bottom: 5px">
                                <label for="checkboxlist" style="display: flex;">Tipo de Recurso</label>
                                <div class="col-sm-6" style="padding: 0;">
                                    <div class="checkbox">
                                        <label><input name="box" type="checkbox" value="text">Columna/Libros/Texto</label>
                                    </div>
                                    <div class="checkbox">
                                        <label><input name="box" type="checkbox" value="image">Imagen</label>
                                    </div>
                                    <div class="checkbox">
                                        <label><input name="box" type="checkbox" value="guide">Guías/pruebas</label>
                                    </div>
                                </div>
                                <div class="col-sm-6" style="padding: 0;">
                                    <div class="checkbox">
                                        <label><input name="box" type="checkbox" value="map">Mapas conceptuales</label>
                                    </div>
                                    <div class="checkbox">
                                        <label><input name="box" type="checkbox" value="video">Video</label>
                                    </div>
                                    <div class="checkbox">
                                        <label><input name="box" type="checkbox" value="presentation">Presentación</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="description">Descripcion</label>
                                <textarea name="description" class="form-control" rows="3" maxlength="255"
                                          placeholder="Descripcion breve de tu Recurso. (Max. 255 caracteres)"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="description">Texto de Columna</label>
                                <textarea name="text" class="form-control" rows="5"
                                          placeholder="¡Aca puedes explayarte cuanto quieras sobre tu aporte!"></textarea>
                            </div>
                        </div>
                    </div>

                    <p class="row">
                        <div class="col-sm-6">
                                <label>Foto de Portada</label>
                                <input name="frontimage" type="file" value="empty" accept="">
                        </div>
                        <div class="col-sm-6">
                            <label>Subir Anexos 1</label>
                            <input name="file1" type="file">
                        </div>
                        <div class="col-sm-6">
                            <label>Subir Anexos 2</label>
                            <input name="file2" type="file">
                        </div>
                        <div class="col-sm-6">
                            <label>Subir Anexos 3</label>
                            <input name="file3" type="file">
                        </div>
                    </p>

                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary btn-raised">Continuar</button>
                    <button type="button" class="btn btn-secondary btn-raised" data-dismiss="modal">Cancelar</button>
                </div>
            </form>

            <!-- File charge
            <form id="testform" enctype="multipart/form-data">
                <input type="file" name="myfile"><br>
                <div class="progress">
                    <div id="mybar" class="progress-bar"></div >
                </div>
                <div id="status"></div>
                <input type="submit">
            </form>
            -->
        </div>
    </div>
</div>

<script>
    $('#resource_form').submit(function(e) {
        e.preventDefault();
        var bar = $('#bar');
        $(this).ajaxSubmit({
            url: '/resource/add',
            type: 'POST',
            beforeSend: function() {
                var percentVal = '0%';
                bar.width(percentVal);
            },
            uploadProgress: function(event, position, total, percentComplete) {
                var percentVal = percentComplete + '%';
                bar.width(percentVal);
            },
            complete: function (xhr) {
                $('#modal_new_resource').modal('hide');
                $('#resource_form').each(function(){
                    this.reset();
                });
            }
        });
        return false;
    });

    $('#modal_new_resource').on('hidden.bs.modal', function (e) {
        $('#idresourcedad').attr('value', null);
    });
</script>