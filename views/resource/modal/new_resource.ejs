<div id="modal_new_resource" class="modal fade">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <button type="button" class="close" data-dismiss="modal" style="padding: 5px 5px">
                <span aria-hidden="true">&times;</span>
            </button>
            <form id="resource_form" class="form-horizontal style-form">
                <div class="modal-header ">
                    <div class="row">
                        <div class="col-md-6">
                            <h3 class="modal-title">Formulario agregar nuevo Recurso</h3>
                        </div>
                        <div class="col-md-6">
                            <div class="progress">
                                <div class="progress-bar" role="progressbar" style="width: 60%;">
                                    60%
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal-body">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                    <label for="title">Titulo</label>
                                    <input type="text" class="form-control" id="title" placeholder="Â¿Cual es el titulo del recurso?">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                    <label for="author">Autor</label>
                                    <input id="author" type="text" class="form-control" placeholder="Si el campo esta vacio, supondremos que tu lo eres.">
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="description">Descripcion</label>
                        <textarea id="description" class="form-control" rows="2" placeholder="Descripcion breve de tu Recurso. (Max. 255 caracteres)"></textarea>
                    </div>



                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary btn-raised">Continuar</button>
                    <button type="button" class="btn btn-secondary btn-raised" data-dismiss="modal">Cancelar</button>
                </div>

            </form>

            <form id="testform" enctype="multipart/form-data">
                <input type="file" name="myfile"><br>
                <div class="progress">
                    <div id="mybar" class="progress-bar"></div >
                </div>
                <div id="status"></div>
                <input type="submit" value="Upload File to Server">
            </form>
        </div>
    </div>
</div>

<script>
    $(function() {

        var bar = $('#mybar');

        options = {
            url: '/resource/add',
            type: 'POST',
            beforeSend: function() {
                var percentVal = '0%';
                bar.width(percentVal);
            },
            uploadProgress: function(event, position, total, percentComplete) {
                var percentVal = percentComplete + '%';
                bar.width(percentVal);
            },
            complete: function(xhr) {
                console.log(xhr);
            }
        };

        $('#testform').submit( function () {
            $(this).ajaxSubmit(options);
            return false;
        });
    });
</script>