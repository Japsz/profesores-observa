<%- include layouts/header.ejs %>
<div class="container blog-content">

    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Inicie sesión</h3>
                </div>
                <div class="panel-body">
                    <form action="/users/handler" method="post" role="form">
                        <div class="form-group">
                            <input class="form-control" placeholder="Usuario" name="username" type="text" autofocus>
                        </div>
                        <div class="form-group">
                            <input class="form-control" placeholder="Contraseña" name="password" type="password" value="">
                        </div>
                        <!-- Change this to a button or input when using this as a form -->
                        <button type="submit" class="btn btn-lg btn-success btn-block">Login <i class="fa fa-sign-in"></i></button>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div><!-- /.container -->

<script type="text/javascript">
    // Cargar ultimos materiales subidos en #mainframe
    $(function(){
        $.ajax({
            type: 'get',
            url: "/material",
            success: function (html) {
                $("#mainframe").append(html);
            }
        });
    });
</script>
