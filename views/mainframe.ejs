<%- include layouts/header.ejs %>

<!-- Esta es la vista principal donde se renderiza, contiene las 2 columnas laterales
y la columna central mainframe -->

<div class="container blog-content">
<!-- class="visible-xs-block" para el responsive, permite hacer que una clase no se vea en cierto tamaño de display.  -->
    <div class="row">
        <!-- Columna de la izquierda -->
        <div id="leftframe" class="col-sm-3 blog-sidebar">
            <div class="sidebar-module">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <h4> Bienvenido MyFriend</h4>
                        <a class="thumbnail" style="width: 100%; height: 100%">
                            <img src="img/fashion/unsplash-4.jpg" class="img-responsive">
                        </a>
                        <div class="btn-group-vertical" role="group" style="width: 100%">
                            <button class="btn btn-default">Mis recursos</button>
                            <button class="btn btn-default">Mis eventos</button>
                            <button class="btn btn-default">Mis revisiones</button>
                            <button class="btn btn-default">Mis comentarios</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Columna del medio -->
        <div class="col-sm-6" >
            <div class="blog-main" id="mainframe">
                <!-- Insertamos aca todos los recursos, recordar id mainframe -->
            </div>
        </div>


        <!-- Columna derecha -->
        <div class="col-sm-3 blog-sidebar">
            <div class="sidebar-module">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="col-md-12">
                            <div class="btn-group">
                                <a onclick="vista(this)" class="btn btn-default text-white" data-calendar-view="month">Mes</a>
                                <a onclick="vista(this)" class="btn btn-default text-white" data-calendar-view="year">Año</a>
                                <a onclick="vista(this)" class="btn btn-default text-white" data-calendar-view="week">Semana</a>
                                <a onclick="vista(this)" class="btn btn-default text-white" data-calendar-view="day">Día</a>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="d-inline">
                                <a onclick="navegar(this)" class="btn btn-default text-white" data-calendar-nav="prev"><i class="fa fa-caret-left"></i></a>
                            </div>
                            <div class="d-inline-block"><h5 id="calendarTitle" class="text-center text-white "></h5></div>
                            <div class="d-inline">
                                <a onclick="navegar(this)" class="btn btn-default float-right text-white" data-calendar-nav="next"><i class="fa fa-caret-right"></i></a>
                            </div>
                        </div>
                        <div id="calendar"></div>
                    </div>
                </div>
            </div>

            <div class="sidebar-module">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <button class="btn btn-primary" onclick="new_resource()"><i class="material-icons md-24">note_add</i>Recurso</button>
                    </div>
                </div>
            </div>

            <div class="sidebar-module">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <h4>Categorías</h4>
                        <ol class="categories list-unstyled">
                            <li>
                                <a class="label label-light label-info" href="#">Ciudadanía</a>
                                <span class="label label-light label-default pull-right">9</span>
                            </li>
                            <li>
                                <a class="label label-light label-danger" href="#">Lenguaje</a>
                                <span class="label label-light label-default pull-right">8</span>
                            </li>
                            <li>
                                <a class="label label-light label-primary" href=#">Matemáticas</a>
                                <span class="label label-light label-default pull-right">5</span>
                            </li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.sidebar-module -->

        </div><!-- /.blog-sidebar -->


    </div><!-- /.row -->

</div><!-- /.container -->

<script type="text/javascript">
    // Cargar ultimos materiales subidos en #mainframe

</script>


